<div class="track-content">

  <div class="player" data-sound-id="<%= [@asset.user.login, @asset.permalink].join('/') %>">
    <div class="play-button-container">
      <div class='play-button play-control'>
        <svg id="playIconSymbol" class="playIconSymbol" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 600 600">
                <path d="M187,489.21l-.31-378.41a.77.77,0,0,1,1.15-.67l150.53,86.75L515.71,299.08a.76.76,0,0,1,0,1.31L188.14,489.87A.76.76,0,0,1,187,489.21Z" />
        </svg>
      </div>
    </div>

    <i class="fa fa-play fa-3x play-button play-control">
      <%= link_to '', media_url(@asset) %>
    </i>

    <div class="waveform" data-waveform="<%= @asset.audio_feature&.waveform&.join(', ') %>">
      <div class="seekbar"></div>
    </div>

    <div class="time">
      <span class="index">0:00</span> of <%= @asset.length %>
    </div>

    <div class="download-button">
      <%= link_to '', media_url(@asset) %>
    </div>
  </div>

  <div class="track-post">

    <% if authorized? and @playlist %>
      <%= link_to("Edit", edit_user_track_path(@user, @asset), class: "edit-link") %>
    <% elsif authorized? %>
      <%= link_to("Edit", edit_user_track_path(@user, @asset), class: "edit-link") %>
    <% end %>

    <h1><%= @asset.name %></h1>

    <% unless @playlist %>
      <h3><%= @asset.user.display_name %></h3>
    <% end %>
    <%= markdown(@asset.description) %>

    <p class="track-stats">
      Uploaded <strong><%= local_time_ago(@asset.created_at) %></strong><br/>
      Listened to <strong><%= @asset.listens_count %></strong> times
    </p>
    
    <p>
      <%= markdown(@asset.credits) if @asset.credits.present? %>
    </p>
  </div>
</div>
